# Neural Core Configuration (Windows + Poetry)
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION_ID=your_organization_id_here

# Cost Management
DEFAULT_COST_PER_1K_TOKENS=0.002
DEFAULT_MODEL=gpt-3.5-turbo
MAX_COST_PER_SUMMARY=10.00

# Database Configuration (shared with Oracle Eye)
DATABASE_URL=sqlite:///../shared/database/community_insights.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=../shared/logs/neural_core.log

# CrewAI Configuration
CREWAI_VERBOSE=true
CREWAI_MEMORY=true
